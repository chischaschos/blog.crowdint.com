.navbar.navbar-default
  .navbar-header
    button.navbar-toggle data= { toggle: 'collapse', target: '#sharing-knowledge' }
      span class='sr-only'
      span class='icon-bar'
      span class='icon-bar'
      span class='icon-bar'
    = link_to image_tag('Crowdint_blog_logo.png', alt: 'Crowd Interactive'), root_path, onclick: event_link_click('Logo'), class: 'navbar-brand'

  #sharing-knowledge.collapse.navbar-collapse
    ul.nav.navbar-nav
      li= link_to 'About', '#about-us', class: 'about-us'
      li= link_to 'Earlier Posts', '#earlier', class: 'earlier-posts'
      li= link_to 'Search', '#search-form', class: 'search'
